mode "button_holds" {
        bindsym 1 exec xdotool mousedown 1
        bindsym 3 exec xdotool mousedown 3
        bindsym w exec xdotool keydown w

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+M mode "button_holds"
