#!/usr/bin/sh

SCRIPT=$(readlink -f $0)
BASEDIR=$(dirname $SCRIPT)
DOTFILESDIR=$(realpath "${BASEDIR}/..")

sudo apt-get install -y git vim zsh i3 python3 python3-pip rxvt-unicode tmux curl
# sudo pacman -Sy git vim zsh i3 python3 python3-pip rxvt-unicode tmux curl

sudo pip3 install --upgrade pip
sudo pip3 install py3status

# git clone https://github.com/mavnn/mintty-colors-solarized.git "${DOTFILESDIR}/themes/solarized/mintty"
git clone https://github.com/solarized/xresources.git "${DOTFILESDIR}/themes/solarized/xresources"
git clone https://github.com/seebi/dircolors-solarized.git "${DOTFILESDIR}/themes/solarized/dircolors"

